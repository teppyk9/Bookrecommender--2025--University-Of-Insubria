<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../stylesheets/Main.css" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookrecommender.client.MainController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <TextField fx:id="campoRicerca" promptText="Cerca un libro..." />
            <Button fx:id="bottoneCerca" onAction="#handleClickCerca" text="Cerca" />
            <ListView fx:id="listaLibri" onMouseClicked="#handleListaDoppioClick" />
        </VBox>
    </children>
</AnchorPane>
